<div class="container jumbotron brands_admin" style="padding-top: 20px;">
    <div class="row">
        {{#each data}}
        <div class="col-lg-12 col-md-6 col-sm-6 card text-center" style="margin-top: 10px; padding-top: 5px;">
            <ul>
                <h5>{{this.brand_name}}</h5>
                <div class="col" style="padding-left: 5px;">
                    <li class="brandDescription" style="padding-top: 10px;">{{this.brand_description}}</li>
                </div>
            </ul>
        </div>
        {{/each}}
    </div>

    <div class="row submit">
        <div class="col">
            <form method="GET" action="/admin/brand/create" style="margin-bottom: -20px;">
                <button type="submit" class="btn submitButton" title="Create brand">
                    Create Brand
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    .brandDescription {
        list-style: none;
    }

    .submit {
        padding-top: 40px;
        position: relative;
        max-width: 100%;
        text-align: end;
    }

    .submitButton:hover {
        transition: all 0.4s ease-in-out;
        box-shadow: 0 5px 10px rgba(76, 102, 119);
    }

    .submitButton {
        background: transparent;
        border: 2px solid rgb(61, 79, 93);
        color: rgb(61, 79, 93);
        letter-spacing: 0.04em;
        text-transform: uppercase;
        font-size: 85%;
        list-style: none;
    }
</style>