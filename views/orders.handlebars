<div class="container jumbotron orders">
    <h3 align="center">Orders</h3>.

    <div class="col-12 mx-auto">
        <table class="table">
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Purchase Date</th>
            </tr>
            {{#each data}}

            <tr>
                <td>{{this.id}}</td>
                <td>
                    {{!-- <a href="/admin/customers/{{this.id}}"> --}}
                        {{this.first_name}} {{this.last_name}}</td>
                </a>
                <td>
                    {{!-- <a href="/admin/products/{{this.id}}"> --}}
                        {{this.product_name}}</td>
                        </a>
                <td>{{this.quantity}}</td>
                <td>{{this.purchase_date}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>