<div class="container jumbotron customers">
    <h3 align="center">Customers</h3>

    <div class="col-10 mx-auto">
        <table class="table">
            <tr>
                <th>Customer ID</th>
                <th>Email Address</th>
                <th>Name</th>
            </tr>

            {{#each data}}
            <tr>
                <td>
                    {{this.id}}
                </td>

                <td>
                    {{this.email}}
                </td>
                <td>
                    <a href="/customers/{{this.id}}">
                        {{this.first_name}} {{this.last_name}}
                    </a>
                </td>
            </tr>
            {{/each}}
        </table>

    </div>
</div>