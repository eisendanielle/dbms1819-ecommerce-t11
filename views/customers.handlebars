<div class="container jumbotron customers">
    <h3 align="center">Customers</h3>

    <div class="col-10 mx-auto">
        <table class="table">
            <tr>
                <th>Customer ID</th>
                <th>Email Address</th>
                <th>Name</th>
            </tr>

            {{#each data}}
            <tr>
                <td>
                    {{this.id}}
                </td>

                <td>
                    {{this.email}}
                </td>
                <td>
                    <a href="/admin/customers/{{this.id}}">
                        {{this.first_name}} {{this.last_name}}
                    </a>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>

    <center>
        <h6 class="pageDirect">
            {{#each pages}} &ensp;<a href="/admin/customers/page/{{this}}" class="pager">Page {{this}}</a>
            {{/each}}
        </h6>

        <h6>
            {{#if prevPage}}
            <a href="/admin/customers/page/{{prevPage}}" class="pager">Previous Page</a>
            {{/if}} {{#if nextPage}}
            <a href="/admin/customers/page/{{nextPage}}" class="pager">Next Page</a>
            {{/if}}
        </h6>
    </center>
</div>

<style>
    .pageDirect {
        letter-spacing: 0.04em;
        text-transform: uppercase;
        font-size: 85%;
    }

    .pager {
        color: rgb(61, 79, 93);
    }
</style>