<div class="container jumbotron update_product">
    <h3>Update Product</h3>

    {{#each products}}
    <form method="POST" action="/products/{{this.id}}">
        {{/each}}

        <div class="controls">
            {{#each products}}
            <div class="form-group">
                <label class="control-label" for="id">Product ID</label>
                <div>
                    <input id="productid" name="id" type="text" value="{{this.id}}" class="form-control" required="" readonly="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="product_name">Product Name *</label>
                <div>
                    <input id="product_name" name="product_name" type="text" value="{{this.product_name}}" class="form-control" required="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="product_description">Product Description *</label>
                <div>
                    <input id="product_description" name="product_description" type="text" value="{{this.product_description}}" class="form-control"
                        required="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="tagline">Tagline *</label>
                <div>
                    <input id="tagline" name="tagline" type="text" value="{{this.tagline}}" class="form-control" required="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="price">Price *</label>
                <div>
                    <input id="price" name="price" type="number" value="{{this.price}}" class="form-control" required="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="warranty">Warranty (year)*</label>
                <div>
                    <input id="warranty" name="warranty" type="number" value="{{this.warranty}}" class="form-control" required="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="pic">Picture link *</label>
                <div>
                    <input id="pic" name="pic" type="text" value="{{this.pic}}" class="form-control" required="">
                </div>
            </div>
            {{/each}}

            <div class="form-group">
                <label class="control-label" for="category_id">Product Category *</label>
                <div class="text-center">
                    <select name="category_id" class="form-control">
                        {{#each products}}
                        <option value="{{this.category_id}}">Current Category: {{this.category_name}}</option>
                        {{/each}} {{#each products_category}}
                        <option value="{{this.id}}">{{this.category_name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="brand_id">Brand *</label>
                <div class="text-center">
                    <select name="brand_id" class="form-control">
                        {{#each products}}
                        <option value='{{this.brand_id}}'>Current Brand: {{this.brand_name}}</option>
                        {{/each}} {{#each brands}}
                        <option value='{{this.id}}'>{{this.brand_name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>

            <div class="form-group submit">
                <div class="text-center">
                    <button type="submit" class="btn submitButton" title="Update Product">
                        Update
                    </button>
                </div>
            </div>

        </div>
    </form>
</div>
</div>

<style>
    .submit {
        padding-top: 10px;
        position: relative;
        max-width: 100%;
        text-align: end;
    }

    .submitButton:hover {
        transition: all 0.4s ease-in-out;
        box-shadow: 0 5px 10px rgba(76, 102, 119);
    }

    .submitButton {
        background: transparent;
        border: 2px solid rgb(61, 79, 93);
        color: rgb(61, 79, 93);
        letter-spacing: 0.04em;
        text-transform: uppercase;
        font-size: 85%;
        list-style: none;
    }
</style>
</style>